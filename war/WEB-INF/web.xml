<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE web-app
    PUBLIC "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
    "http://java.sun.com/dtd/web-app_2_3.dtd">

<web-app>
   
   <filter>
   		<filter-name>PaypalAuthFilter</filter-name>
   		<filter-class>com.appspot.demo.server.paypal.filter.PaypalAuthFilter</filter-class>
   </filter>
   
   <filter-mapping>
   		<filter-name>PaypalAuthFilter</filter-name>
   		<url-pattern>/demo/paypal/*</url-pattern>
   </filter-mapping>
   
   <filter>
   		<filter-name>PaypalAdminFilter</filter-name>
   		<filter-class>com.appspot.demo.server.paypal.filter.PaypalAdminFilter</filter-class>
   </filter>
   <filter-mapping>
   		<filter-name>PaypalAdminFilter</filter-name>
   		<url-pattern>/demo/paypal/invoice/admin/*</url-pattern>
   		<url-pattern>/demo/paypal/transaction/admin/*</url-pattern>
   		<url-pattern>/demo/paypal/productpackage/admin/*</url-pattern>
   </filter-mapping>
   
   <servlet>
   		<servlet-name>DemoDispatcher</servlet-name>
   		<servlet-class>org.springframework.web.servlet.DispatcherServlet</servlet-class>
        <load-on-startup>1</load-on-startup>
   </servlet>
  
    <servlet-mapping>
        <servlet-name>DemoDispatcher</servlet-name>
        <url-pattern>/demo/*</url-pattern>
    </servlet-mapping>
  
  <context-param>
    <param-name>contextConfigLocation</param-name>
    <param-value>
       /WEB-INF/DemoDispatcher-servlet.xml
    </param-value>
   </context-param>
 
  <listener>
    <listener-class>org.springframework.web.context.ContextLoaderListener</listener-class>
  </listener>
  
      <security-constraint>
        <web-resource-collection>
            <url-pattern>/demo/paypal/*</url-pattern>
        </web-resource-collection>
        <user-data-constraint>
            <transport-guarantee>CONFIDENTIAL</transport-guarantee>
        </user-data-constraint>
    </security-constraint>
  
  <!-- Default page to serve -->
  <welcome-file-list>
    <welcome-file>Paypal.html</welcome-file>
  </welcome-file-list>

</web-app>
